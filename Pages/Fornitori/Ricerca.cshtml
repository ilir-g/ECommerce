@page

@using Ecommerce.Pages
@model FornitoriModel
@{
    ViewData["Title"] = "Fornitori";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Breadcrumbs-->
<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="#">Dashboard</a>
    </li>
    <li class="breadcrumb-item active">Overview</li>
</ol>

<!-- DataTables Example -->
<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        La lista dei Fornitori
        <span style="float: right;">
            <a href="@(Url.Action("Edit", "Fornitori", new { id = 0 }))"><i class="fas fa-user"></i>  Crea nuovo fornitoro</a>
        </span>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" cellspacing="0">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Cognome</th>
                        <th>Ragione Sociale</th>
                        <th>Codice Fiscale</th>
                        <th>Data DiNascita</th>
                        <th>Luogo Nascita</th>
                        <th>Sesso</th>
                        <th>Luogo Nascita</th>
                        <th>Edit/ Delete</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Nome</th>
                        <th>Cognome</th>
                        <th>Ragione Sociale</th>
                        <th>Codice Fiscale</th>
                        <th>Data DiNascita</th>
                        <th>Luogo Nascita</th>
                        <th>Sesso</th>
                        <th>Luogo Nascita</th>
                        <th>Edit/ Delete</th>
                    </tr>
                </tfoot>
                <tbody>
                    @if (@Model.fornitori == null)
                    {
                        <tr>No items found</tr>
                    }
                    else
                    {
                        @foreach (var item in @Model.fornitori)
                        {
                            var id = Convert.ToString(@item.IdFornitore);
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nome)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Cognome)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RagioneSociale)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CodiceFiscale)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DataNascita)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LuogoNascita)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Sesso)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PersonaFisica)
                                </td>


                                <td>
                                    <a href="@(Url.Action("Edit", "Fornitori", new { id = id }))"><i class="fas fa-pencil-alt"></i></a>

                                    <a asp-page="./Ricerca" onclick="return confirm('Are you sure you want to delete this record?');"
                                       asp-page-handler="Delete" asp-route-id="@item.IdFornitore"><i class="fas fa-trash-alt"></i></a>

                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

