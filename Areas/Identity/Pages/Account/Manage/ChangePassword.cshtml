@page
@model Ecommerce.Areas.Identity.Pages.Account.Manage.ChangePasswordModel
@{
    ViewData["Title"] = "Change your password";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-4">

        @using (Html.BeginForm())
        {
            @ViewData["Mesagge"]
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Model.ErrorMesagge
            @Model.StatusMesagge
         
            <div class="form-group">
                @Html.LabelFor(model => model.Input.Password)
                <div class="form-label-group">
                    @Html.EditorFor(model => model.Input.Password, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Input.Password, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Input.NewPassword)
                <div class="form-label-group">
                    @Html.EditorFor(model => model.Input.NewPassword, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Input.NewPassword, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Input.ConfirmPassword)
                <div class="form-label-group">
                    @Html.EditorFor(model => model.Input.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Input.ConfirmPassword, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <button type="submit" asp-page-handler="ChangePassowrd" class="btn btn-primary btn-block">Change Password</button>
            </div>
        }
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
